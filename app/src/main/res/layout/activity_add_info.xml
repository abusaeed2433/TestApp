<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollViewAddInfo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddInfo"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="65dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewPhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                app:strokeWidth="2dp"
                android:src="@drawable/baseline_photo_camera_24"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextHeartRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="45dp"
                    android:textSize="18sp"
                    android:hint="Heart Rate"
                    android:inputType="text"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:importantForAutofill="no"/>

                <EditText
                    android:id="@+id/editTextSysPressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="45dp"
                    android:textSize="18sp"
                    android:hint="Systolic pressure"
                    android:inputType="text"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:importantForAutofill="no"/>

                <EditText
                    android:id="@+id/editTextDysPressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="45dp"
                    android:textSize="18sp"
                    android:hint="Diastolic"
                    android:inputType="number"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:importantForAutofill="no"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <android.widget.Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Save"
            android:layout_gravity="end"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</ScrollView>